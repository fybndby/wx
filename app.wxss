/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


/********************畅销书*************************/

.hotsale-body{
  display: flex;
  justify-content: space-between;
}
.hotsale-item{
  margin-top: 24rpx;
  width: 224rpx;
  height: 345rpx;
  background-color: #fff;
  overflow: hidden;
  border-radius: 14rpx;
  text-align: center;
}
.hotsale-item .hotsale-item-box image{
  width: 194rpx;
  height: 194rpx;
  margin-top: 16rpx;
}

.hotsale-item .hotsale-item-title{
  color: #484848;
  font-size: 24rpx;
}
.hotsale-item .hotsale-item-price{
  color: #E12616;
  font-size: 24rpx;
}
.hotsale-item .hotsale-item-price text{
  font-size: 32rpx;
}
.hotsale-item{
  margin-bottom:15rpx;
}

/***********五星************/

.starsx21 image{
  width: 21rpx;
  height: 21rpx;
  margin-left: 4rpx;
}
/***********浮动***********/
.fl{
  float: left;
}
.fr{
  float: right;
}

/******************************搜索******************************/
.search .search-box{
  display: flex;
  align-items: center;
  width: 730rpx;
  height: 57rpx;
  background-color: #ffffbb;
  margin: 0 auto;
  border-radius: 100rpx;
}

.search .search-box .ico image{
    width: 27rpx;
    height: 27rpx;
    margin-left: 20rpx;
}
.search .search-box .search-text{
  font-size: 25rpx;
  color: #b2b1b1;
  margin-left: 15rpx;
}
/***************************列表************************************/
.movie-item{
  border-top: #e4e4e4 1px solid;
}
.movie-info{
  font-size: 23rpx;
  color: #666;
}
.movie-poster{
  margin-right: 34rpx;
}
.movie-poster image{
  width: 175rpx;
  height: 225rpx;
}
.movie-box{
  display: flex;
  padding: 40rpx 30rpx;
}
.p-title{
  font-size: 28rpx;
  color: #000;
  padding-bottom: 10rpx;
}
.p-price{
  color: #e43728;
  font-size: 24rpx;
}
.p-price text{
  font-size: 30rpx;
}
.p-comment{
  display: flex;
}
.p-comment .counts{
  margin-left: 20rpx;
  color: #a7a7a7;
}
/***************comminfo******************/
.comm-info{
  background-color: #fff;
  padding-top: 15rpx;
}
.comm-box{
  padding: 0 35rpx;
}
.comm-info-name{
  font-size: 26rpx;
  color: #333;
  border-left: #9966cc 7rpx solid;
  padding-left: 10rpx;
}
.commonstyle{
  font-size: 20rpx;
  color: #333;
  border-bottom: #eaeaea 1px solid;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 50rpx;
}
.commonstyle .viewproduct{
  float: right;
  color: #999;
  margin-right: 30rpx;
}
/*******************商品评论************************/
.comment-item{
  border-bottom: #eaeaea 1px solid;
  padding: 40rpx;
}
.comm-comment{
  background-color: #fff;
  margin-top: 30rpx;
  padding-top: 15rpx;
  /* margin-bottom: 200rpx; */
  /* padding-bottom: 200rpx; */
}
.yellow-line{
  border-left: #ffcc00 7rpx solid;
}
.author-header image{
  width: 60rpx;
  height: 60rpx;
}
.author-header{
  margin-right: 10rpx;
}
.comment-author{
  display: flex;
}
.author-name{
  color: #333;
  font-size: 20rpx;
  padding-left: 5rpx;
}
.comment-stars{
  display: flex;
}
.comment-content{
  font-size: 20rpx;
  color: #939393;
}
/********************底部************************/
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #fff;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
}
.footer .addtocart,.buynow{
  width: 230rpx;
  height: 100rpx;
  background-color: #e53e30;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}
.footer .buynow{
  background-color: #ffb350;
} 
/**/
.hsc{
  display: flex;
  width: 290rpx;
  text-align: center;
}
.hsc view{
  width: 96rpx;
}
.hsc-home-img{
  height: 50rpx;
  padding-top: 10rpx;
}
.hsc-home-img image{
  width: 50rpx;
  height: 50rpx;
}
.hsc-home-text{
  font-size: 20rpx;
  color: #666;
}
/**btn**/
.hsc-share{
  position: relative;
}
.hsc-share button{
  width: 96rpx;
  height: 100rpx;
  outline: none;
  background-color: #fff;
}
.hsc-share button::after{
   border: none;
}
.share-ico{
  position: absolute;
  left: 0;
  top: 10rpx;
}
.share-ico image {
  width: 50rpx;
  height: 50rpx;
}
.share-text{
  text-align: center;
  position: absolute;
  top: 60rpx;
  color: #666;
  font-size: 20rpx;
}
.hsc-cart{
  position: relative;
}

.hsc-cart .hsc-cart-count{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  font-size: 23rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 50%;
  color: #fff;
  background-color: #ff4444;
  right: 10rpx;
  top: 5rpx;
}